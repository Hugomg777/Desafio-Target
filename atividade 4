#include <iostream>
#include <string>

int main() {
    
    std::string str = "Exemplo de string";

  
    int n = str.length();

    
    for (int i = 0; i < n / 2; ++i) {
        char temp = str[i];
        str[i] = str[n - i - 1];
        str[n - i - 1] = temp;
    }

   
    std::cout << "String invertida: " << str << std::endl;

    return 0;
}
