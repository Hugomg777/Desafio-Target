#include <iostream>
#include <iomanip>
using namespace std;
int main() {
   
    double sp = 67836.43;
    double rj = 36678.66;
    double mg = 29229.88;
    double es = 27165.48;
    double outros = 19849.53;

    double total = sp + rj + mg + es + outros;

 
    double percen_sp = (sp / total) * 100;
    double percen_rj = (rj / total) * 100;
    double percen_mg = (mg / total) * 100;
    double percen_es = (es / total) * 100;
    double percen_outros = (outros / total) * 100;

   
    cout << fixed << setprecision(2);

    
    cout << "percentual de representacao por estado:" << endl;
    cout << "SP: " << percen_sp << "%" << endl;
    cout << "RJ: " << percen_rj << "%" << endl;
    cout << "MG: " << percen_mg << "%" <<endl;
    cout << "ES: " << percen_es << "%" << endl;
   cout << "Outros: " << percen_outros << "%" << endl;

    return 0;
}

